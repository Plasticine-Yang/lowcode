{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": ".",
    "paths": {
      "@lowcode/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "packages/*/src"
  ]
}
